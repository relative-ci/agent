{
  "name": "@relative-ci/agent",
  "version": "4.2.14",
  "description": "Relative CI agent",
  "repository": "relative-ci/agent",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "relative-ci-agent": "bin/index.js"
  },
