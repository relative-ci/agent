{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["es2020", "es2022.error"],
    "paths": {
      "@relative-ci/core/*": ["./packages/core/lib/esm/*"],
      "@relative-ci/core": ["./packages/core/lib/esm"],
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
